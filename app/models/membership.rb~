
class Membership < ActiveRecord::Base
belongs_to :beer_club
belongs_to :user
has_many :users



def to_s
	me = Membership.find_by id:user_id
        club_id = me.beer_club_id
	kerho = BeerClub.find_by id:club_id

	if me.nil?
		"K채ytt채j채 ei ole viel채 liittynyt olutseuraan"
	else
	" #{kerho.name} "

	end
end
end
